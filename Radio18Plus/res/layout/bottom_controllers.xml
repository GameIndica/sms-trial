<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_controllers_body_height"
        android:background="@color/bottom_controller_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/std_pad" >

            <TextView
                android:id="@+id/tvArticleName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:shadowColor="#000"
                android:shadowDx="1.0"
                android:shadowDy="2.0"
                android:text="Radio 18+"
                android:textColor="@color/font_bottom_bar"
                android:textSize="@dimen/font_bottom_bar"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="0:00 / 0:00"
                android:textColor="@color/font_bottom_bar"
                android:textSize="@dimen/font_bottom_bar_secondary" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivPause"
            android:layout_width="@dimen/ic_pause_height"
            android:layout_height="@dimen/ic_pause_width"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_pause" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/progressbar_height"
        android:indeterminate="false"
        android:indeterminateOnly="false"
        android:max="1000"
        android:progressDrawable="@drawable/progress_horizontal" />

</LinearLayout>