<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvRetryMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/std_pad"
        android:paddingRight="@dimen/std_pad"
        android:text="@string/connection_error_pls_retry"
        android:textColor="@color/font_warning"
        android:textSize="@dimen/font_warning" />

    <Button
        android:id="@+id/btRetry"
        style="@style/Standard_Button"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/std_btn_height"
        android:layout_margin="@dimen/std_margin"
        android:text="@string/Retry" />

</LinearLayout>