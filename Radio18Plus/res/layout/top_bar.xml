<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:padding="@dimen/std_pad"
    android:background="@color/top_bar_bg"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/ic_std_dim"
        android:layout_height="@dimen/ic_std_dim"
        android:src="@drawable/ic_stub_white"
        android:layout_gravity="center_vertical" 
        />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/font_main_title"
        android:textSize="@dimen/font_main_title"
        android:text="@string/RADIO_18_PLUS"
        android:layout_marginLeft="@dimen/std_margin"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>