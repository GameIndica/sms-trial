<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="Standard_Button" >
	    <item name="android:background">@drawable/std_btn_bg</item>
	    <item name="android:textColor">@color/font_std_btn</item>
	    <item name="android:textSize">@dimen/font_std_btn</item>
	</style>
    <style name="One_line_text">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Rvn_ListView">
        <item name="android:divider">@color/list_divider</item>
        <item name="android:dividerHeight">@dimen/divider_height</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>
    <style name="Dialog_title">
        <item name="android:textColor">@color/std_btn</item>
        <item name="android:textSize">@dimen/font_dialog_title</item>
        <item name="android:padding">@dimen/std_pad</item>
    </style>
    <style name="Dialog_Button">
        <item name="android:textColor">@color/font_std</item>
        <item name="android:textSize">@dimen/font_dialog_btn</item>
        <item name="android:background">@drawable/dialog_btn_bg</item>
    </style>
    <style name="Dialog_Content">
        <item name="android:textColor">@color/font_dialog_content</item>
        <item name="android:textSize">@dimen/font_dialog_content</item>
    </style>
</resources>