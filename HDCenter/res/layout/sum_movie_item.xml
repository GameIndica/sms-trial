<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="100dp"
        android:layout_height="137dp"
        android:background="@drawable/rounded_rect_small"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/movie_stub" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tvName"
            style="@style/oneLineText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:text="Movie Name"
            android:textColor="@color/movie_name_color"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tvVnName"
            style="@style/oneLineText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:text="Vietnamese name"
            android:textColor="@color/normal_text_color" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMDB:"
                android:textColor="@color/normal_text_color" />

            <TextView
                android:id="@+id/tvIMDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="7.8"
                android:textColor="@color/normal_text_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>