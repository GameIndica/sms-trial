<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.android.customviews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_data_bg"
    android:orientation="vertical" >

    <phs.views.LomoTabs
        android:id="@+id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/lm_tab_layout_height"
        android:background="@color/lm_tab_bg"
        custom:xpad="@dimen/lm_tabs_xpad"
        custom:ypad="@dimen/lm_tabs_ypad"
        custom:leftText="@string/mROBO"
        custom:rightText="@string/PHONE"
        >
    </phs.views.LomoTabs>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@drawable/sep_line_tab_bg" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/datalist_frame_margin"
        android:background="@drawable/datalist_frame"
        android:padding="@dimen/datalist_frame_pad" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/datalist_bg"
            android:padding="1dp" >
            <ListView
                android:id="@+id/listview"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:divider="@drawable/datalist_divider"
                android:dividerHeight="3px"
			>
            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>