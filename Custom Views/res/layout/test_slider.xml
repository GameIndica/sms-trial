<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.android.customviews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_contr_bg"
        android:orientation="vertical"
        android:padding="0dp" >

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            android:paddingBottom="0dp"
            android:paddingLeft="@dimen/button_layout_x_pad"
            android:paddingRight="@dimen/button_layout_x_pad"
            android:paddingTop="0dp" >

            <phs.views.PetrButton
                android:id="@+id/btYes"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/std_margin"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                custom:basePadding="@dimen/petr_base_pad"
                custom:buttonCornerRadius="@dimen/btn_petr_corner"
                custom:text="@string/Transform"
                custom:textColor="@color/btn_text"
                custom:textSize="@dimen/fs_main_bt" >
            </phs.views.PetrButton>

            <phs.views.PetrButton
                android:id="@+id/btNo"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/std_margin"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                custom:basePadding="@dimen/petr_base_pad"
                custom:buttonCornerRadius="@dimen/btn_petr_corner"
                custom:text="@string/Mute"
                custom:textColor="@color/btn_text"
                custom:textSize="@dimen/fs_main_bt" >
            </phs.views.PetrButton>
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center"
            android:padding="0dp" >

            <phs.views.vol_button.ExperimentKnobController
                android:id="@+id/knob_contr"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@color/main_bg"
                android:padding="0dp" >
            </phs.views.vol_button.ExperimentKnobController>
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/transparent" />

        <phs.views.NewAudioButtons
            android:id="@+id/audio_buttons"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@android:color/transparent"
            custom:hapticFeedback="on"
            custom:nextImg="@drawable/next_button"
            custom:playImg="@drawable/play_button"
            custom:previousImg="@drawable/prev_button" >
        </phs.views.NewAudioButtons>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/transparent" />
        
        <Space
            android:layout_width="fill_parent"
            android:layout_height="@dimen/slider_handler" 
            />
    </LinearLayout>

    <SlidingDrawer
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateOnClick="true"
        android:background="@android:color/transparent"
        android:content="@+id/content"
        android:handle="@+id/handle" >

        <ImageView
            android:id="@id/handle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/slider_handler"
            android:padding="@dimen/slider_pad"
            android:background="@android:color/darker_gray"
            android:scaleType="fitCenter"
            android:src="@drawable/current" />

        <TextView
            android:id="@id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/seafoam"
            android:gravity="center"
            android:text="Helloooo" >
        </TextView>
    </SlidingDrawer>

</FrameLayout>